
<p id="notice"><%= notice %></p>

<h1>Blog with Posts</h1>
<%= image_tag("http://docs.oracle.com/javafx/2/transformations/img/xylophone.jpg", height: '62', width: '62') %>

<h4><%= link_to 'About the creator of this site', welcome_index_path %></h4><br>
<br>
<table>
  <thead>
    <tr>
      <th>Post title</th>
      <th>Post body</th>
      <th>Post date</th>
      <th>' '</th>
      <th>Post author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.post_title %> </td>
      <td><%= post.post_body %></td>
      <td><%= post.post_date.to_s(:long) %> </td>
      <td><%= "  " %> </td>
      <td><%= post.post_author %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>

  </tbody>
</table>


<br>

<h3><%= link_to 'New Post', new_post_path %></h3><br>
